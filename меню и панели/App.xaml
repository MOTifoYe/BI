<Application x:Class="меню_и_панели.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:меню_и_панели"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ControlTemplate x:Key="VerticalSeparator" TargetType="{x:Type Separator}">
            <Rectangle Height="auto" Width="1" Fill="DarkGray"/>
        </ControlTemplate>
        
       <ControlTemplate x:Key="HorizontalSeparator" TargetType="{x:Type Separator}">
            <Rectangle Height="1" Width="auto" Fill="DarkGray"/>
        </ControlTemplate>
        
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="TextWrapping" Value="NoWrap"/>
            <Setter Property="TextTrimming" Value="None"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Calibri"/>
        </Style>
        

    </Application.Resources>
</Application>
