<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3" 
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="400" 
        Width="300"
        >
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="2">
            <Button 
                Content="Pass" 
                Width="50"   
                Click="Login_Click" />
            
        </StackPanel>

        <DataGrid
            Grid.Row="1"
            Name="dataGrid1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}" MinWidth="100"/>
                <DataGridTextColumn Header="Оценка" Binding="{Binding Mark}" />
            </DataGrid.Columns>
        </DataGrid>



        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Text="Name" 
                Grid.Row="0" 
                Grid.Column="0" 
                Margin="2" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom"/>
            
            <TextBox
                Name="name" 
                Grid.Row="1" 
                Grid.Column="0" 
                Margin="2"/>
                
            <TextBlock 
                Text="Mark" 
                Grid.Row="0" 
                Grid.Column="1" 
                Margin="2" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom"/>
            
            <TextBox 
                Name="mark"
                Grid.Row="1" 
                Grid.Column="1" 
                Margin="2"/>

            <Button 
                Name="b1" 
                Click="Add"
                Content="Add" 
                Grid.Column="2" 
                Margin="2" />
            
            <Button 
                Name="b2" 
                Click="Del"
                Content="Del" 
                Grid.Row="1"
                Grid.Column="2" 
                Margin="2" />
        </Grid>
        
        <Grid Grid.Row="3" Background="GhostWhite">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="1" 
                Text="Some Text"
                VerticalAlignment="Center" 
                HorizontalAlignment="Center"  
                FontStyle="{Binding ElementName=comboStyle, Path=SelectedItem.Text}" 
                FontFamily="{Binding ElementName=comboFamily, Path=SelectedItem.Text}"
                FontSize="{Binding ElementName=comboSize, Path=SelectedItem.Text}" />

            <StackPanel  Width="auto" Height="auto" HorizontalAlignment="Left" VerticalAlignment="Center">

                <ComboBox SelectedIndex="0" Name="comboStyle" Width="80" Height="20">
                    <TextBlock Text="Normal" />
                    <TextBlock Text="Italic" />
                </ComboBox>

                <ComboBox SelectedIndex="0" Name="comboFamily" Width="80" Height="20">
                    <TextBlock Text="Calibri" />
                    <TextBlock Text="Courier New" />
                    <TextBlock Text="Times New Roman" />
                </ComboBox>

                <ComboBox SelectedItem="{Binding ElementName=DefaultSize, Mode=OneWay}" Name="comboSize" Width="80" Height="20">
                    <TextBlock Text="8" />
                    <TextBlock Text="9" />
                    <TextBlock Text="10" />
                    <TextBlock Text="11" />
                    <TextBlock Text="12" />
                    <TextBlock Text="13" />
                    <TextBlock Text="14" />
                    <TextBlock Text="15" />
                    <TextBlock Text="16" />
                    <TextBlock Text="17" />
                    <TextBlock Text="18" />
                    <TextBlock Text="19" />
                    <TextBlock Text="21" Name="DefaultSize" />
                    <TextBlock Text="22" />
                    <TextBlock Text="23" />
                    <TextBlock Text="24" />
                    <TextBlock Text="25" />
                    <TextBlock Text="26" />
                    <TextBlock Text="27" />
                    <TextBlock Text="28" />
                    <TextBlock Text="29" />
                    <TextBlock Text="30" />
                    <TextBlock Text="31" />
                    <TextBlock Text="32" />
                    <TextBlock Text="33" />
                    <TextBlock Text="34" />
                    <TextBlock Text="35" />
                    <TextBlock Text="36" />
                    <TextBlock Text="37" />
                    <TextBlock Text="38" />
                    <TextBlock Text="39" />
                    <TextBlock Text="40" />
                    <TextBlock Text="41" />
                </ComboBox>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
